<% @page_title = t(:messages) %>
<div id="content-main">
  <div id="page-title">
    <h2><%= @page_title %></h2>
  </div>
  <div id="new-message-form">
    <h3><%= t(:send_new_message) %></h3>
    <%= form_for(@message) do |f| %>
      <div class="form-field message-field">
        <%= f.label t(:destination) %>:<br />
        <%= f.text_field :destination %>
        <%= f.text_area :body, :rows => 4 %>
        <div id="send-message-buttons">
          <div id="caracter-counter">
            0
          </div>
          <div id="submit-message-button">
            <%= f.submit t(:send) %>
          </div>
        </div>
      </div>
      <div class="clear"></div>
    <% end %>
  </div>
  <div id="message-list">
    <h3><%= t(:sent_messages) %></h3>
    <% if @messages.size > 0 %>
      <table>
        <tr>
          <th id="mdestination"><%= t(:destination) %></th>
          <th id="mbody"><%= t(:message) %></th>
          <th id="mdate"><%= t(:date) %></th>
        </tr>
        <% @messages.each do |message| %>
          <tr>
            <td>+<%= message.destination %></td>
            <td><%= message.body %></td>
            <td><%= message.created_at.strftime('%d/%m/%Y %H:%M:%S') %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <h3><%= t(:you_dont_send_any_messages_yet) %></h3>
    <% end %>
  </div>
</div>
